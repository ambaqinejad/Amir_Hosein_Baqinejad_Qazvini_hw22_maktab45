<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/dashboard/sidenav.css">
    <link rel="stylesheet" href="css/style.css">
</head>

<body>

    <div class="container-fluid">
        <nav>
            <%- include('./partials/navbar.ejs', {
                title: ''
            }) %>
        </nav>


        <%- include('./partials/sidenav.ejs', {
            blogger
        }) %>

            <main class="p-3">
                <div class="row">
                    <div class="col"></div>
                    <div class="col-12-sm col-md-7 col-lg-5 px-4">
                        <form class="mt-2 mb-2" id="updateForm" method="post" action="/dashboard/update">
                            <div class="mb-2">
                                <label for="firstName">First Name</label><span class="ms-3 text-danger" id="firstNameError"></span>
                                <input type="text" class="form-control" id="firstName" value="<%=blogger.firstName%>" name="firstName">
                            </div>
                            <div class="mb-2">
                                <label for="lastName">Last Name</label><span class="ms-3 text-danger" id="lastNameError"></span>
                                <input type="text" class="form-control" id="lastName" value="<%=blogger.lastName%>" name="lastName">
                            </div>
                            <div class="mb-2">
                                <label for="password">Password</label><span class="ms-3 text-danger" id="passwordError"></span>
                                <input type="password" class="form-control" id="password" name="password">
                            </div>
                            <div class="mb-2">
                                <label for="username">Username</label><span class="ms-3 text-danger" id="usernameError"></span>
                                <div class="input-group">
                                    <div class="input-group-text">@</div>
                                    <input type="text" class="form-control" id="username" value="<%=blogger.username%>" name="username">
                                </div>
                            </div>
                            <div class="mb-2">
                                <label for="email">Email address</label><span class="ms-3 text-danger" id="emailError"></span>
                                <input type="email" class="form-control" id="email" value="<%=blogger.email%>" name="email">
                            </div>
                            <div class="mb-2">
                                <label for="phone">Phone number</label><span class="ms-3 text-danger" id="phoneError"></span>
                                <div class="input-group">
                                    <div class="input-group-text">+98</div>
                                    <input type="number" class="form-control" id="phone" value="<%=+blogger.phone.substring(3)%>" name="phone">
                                </div>
                            </div>
                            <div class='mb-2'>
                                <label class="form-check-label">
                                Gender:
                            </label><span class="ms-3 text-danger" id="genderError"></span>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="gender" value="male" id="male" <%=blogger.gender==='male' ? 'checked' : '' %>>
                                    <label class="form-check-label" for="male">
                                    Male
                                </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="gender" value="female" id="female" <%=blogger.gender==='female' ? 'checked' : '' %>>
                                    <label class="form-check-label" for="female">
                                    Female
                                </label>
                                </div>
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary">Update</button>
                            </div>
                        </form>
                        <div class="d-flex justify-content-center">
                            <p class="text-danger">
                                <%= message %>
                            </p>
                        </div>

                    </div>
                    <div class="col"></div>
                </div>
            </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="js/dashboard/sidenav.js"></script>
    <script src="js/dashboard/update.js"></script>
</body>

</html>